{
  "name": "chrome-extension-boilerplate",
  "version": "1.0.0",
  "description": "A web extension boilerplate with React 18, Webpack 5, and Webpack Dev Server 4",
  "license": "UNLICENSED",
  "engines": {
    "node": ">22.7.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tymzar/web-extension"
  },
  "watch": {
    "dev": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx,html"
    }
  },
  "scripts": {
    "start": "dotenv -e .env.local node scripts/esbuild.config.ts",
    "build": "dotenv -e .env node scripts/esbuild.config.ts",
    "lint": "eslint --cache --no-error-on-unmatched-pattern --ext ts,tsx {src,scripts}",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --no-editorconfig src/**/*.* --check",
    "prettier:fix": "prettier --no-editorconfig src/'**/*.{ts,tsx,js,css,html,md}' --write"
  },
  "type": "module",
  "dependencies": {
    "@heroui/react": "^2.8.2",
    "@iconify/react": "^6.0.0",
    "chart.js": "4.4.0",
    "framer-motion": "^12.23.12",
    "react": "18.2.0",
    "react-chartjs-2": "5.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.48.2"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@craftamap/esbuild-plugin-html": "0.6.1",
    "@faker-js/faker": "9.9.0",
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.10",
    "@types/chrome": "0.0.202",
    "@types/node": "20.4.2",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@types/zip-webpack-plugin": "3.0.3",
    "autoprefixer": "10.4.16",
    "babel-eslint": "10.1.0",
    "babel-loader": "9.1.2",
    "babel-preset-react-app": "10.0.1",
    "clean-webpack-plugin": "4.0.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.3",
    "dotenv": "16.3.1",
